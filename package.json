{
  "name": "sms-management-api",
  "version": "1.0.0",
  "description": "SMS MANAGEMENT",
  "main": "index.js",
  "scripts": {
    "test": "nyc --reporter=text mocha --require @babel/register ./src/__tests__/*.js  --exit --timeout 15000",
    "build": "rimraf dist/ && babel src -d dist",
    "start": "npm build && node ./dist/bin/www.js",
    "dev": "nodemon --exec babel-node -- ./src/bin/www.js",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov"
  },
  "nyc": {
    "_comment": "Purpose of this part: to do code coverage within Mocha/Chai using Istanbul",
    "check-coverage": true,
    "register": "babel-register",
    "include": [
      "**/*.js",
      "./*.js"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/test/**",
      "**/coverage/**",
      "**/dist/**"
    ],
    "reporter": [
      "lcov",
      "json",
      "text",
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Annmary12/sms-management-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Annmary12/sms-management-api/issues"
  },
  "homepage": "https://github.com/Annmary12/sms-management-api#readme",
  "dependencies": {
    "@babel/register": "^7.4.4",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^6.1.4",
    "mongoose": "^5.5.2",
    "mongoose-paginate": "^5.0.3",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.4.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "istanbul": "^0.4.5"
  }
}
